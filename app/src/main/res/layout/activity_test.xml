<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ironflowers.rm.testapp.SimpleExampleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        tools:ignore="HardcodedText">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onLocalOnlyClicked"
            android:text="Local Only" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRemoteOnlyClicked"
            android:text="Remote Only" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onLocalFallbackRemoteClicked"
            android:text="Local Fallback Remote" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRemoteFallbackLocalClicked"
            android:text="Remote Fallback Local" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRetrieveLocalAndRemoteClicked"
            android:text="Local and Remote" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:onClick="onClearCacheClicked"
            android:text="Clear Local Cache" />

        <TextView
            android:id="@+id/my_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Click any of the buttons to make a call." />

    </LinearLayout>
</ScrollView>